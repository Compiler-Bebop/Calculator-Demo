/* pages/index/index.wxss */
page{
  background: #f5f5f5;
 }
 .project_name{
   position:absolute;
   top:25px;
   width:100%;
   text-align: center;
   font-size: 30px;
 }
 .screen_content{
  position: fixed;
  color: #1b1717;
  background: #fff;
  font-size: 40px;
  bottom: 450px;
  text-align: right;
  height:140px;
  width: 100%;
  word-wrap: break-word;
  border-top:1px solid #a8a8a8;
  border-bottom:1px solid #a8a8a8;
 }
 .screen{
  position: absolute;
  font-size: 40px;
  text-align: right;
  bottom:0px;
  width: 96%;
  left:2%;
  word-wrap: break-word;
 }
 .content{
  position: fixed;
  bottom: 0;
  background-color:transparent;
 }

 .bg{
   width: 100%;
  height: 50%;
  position:fixed; 
  
  /*z-index 较大的元素会覆盖较小的元素在上层进行显示*/
  z-index: -1;
 }
 .buttonGroup{
  display: flex;
  flex-direction: row;

 }
 .buttonitem{
  text-align: center;
  line-height: 160rpx;
  width: 25%;
  border-radius: 0;
  font-size: 60rpx;
  background:rgba(255, 255, 255, 0.75);
  margin:0rpx;
 }
 .buttonitem1{
  width: 192rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 0;
  font-size: 50rpx;
  background:rgba(255, 255, 255, 0.75);
 }
 icon{
  position: absolute;
  top: 20%;
  left: 67rpx;
 }
 .color{
  background: rgb(255, 255, 255);
 }
 .equal{
   width: 380rpx;
   text-align: center;
   line-height: 120rpx;
   border-radius: 0;
   background:rgba(255, 255, 255, 0.75);
 }
 .shadow{
  background: #e9ebe9;
 }

 .tinybutton{
  position: fixed;
  text-align:right;
  
  width: 10%;
  border-radius: 0;
  font-size: 20rpx;
  background:rgb(167, 132, 132);
  
 }
